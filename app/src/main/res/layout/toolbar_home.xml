<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v7.widget.Toolbar
                                   android:id="@+id/toolbar"
                                   android:layout_width="match_parent"
                                   android:layout_height="@dimen/height_54dp"
                                   android:elevation="2dp"
                                   android:background="@android:color/white" app:contentInsetEnd="@dimen/nol_dp"
                                   app:contentInsetLeft="@dimen/nol_dp" app:contentInsetRight="@dimen/nol_dp"
                                   app:contentInsetStart="@dimen/nol_dp"
                                   android:gravity="center">

    <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:layout_gravity="start"
                android:paddingRight="@dimen/padding_8dp"
                android:paddingTop="@dimen/padding_8dp"
                android:paddingBottom="@dimen/padding_8dp"
                android:paddingEnd="@dimen/padding_8dp"
                android:src="@drawable/splas"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_marginEnd="@dimen/padding_16dp"
                android:layout_marginRight="@dimen/padding_16dp"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <FrameLayout
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?selectableItemBackground"
                    android:id="@+id/fSearch"
                    android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView
                        android:padding="4dp"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/ic_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>