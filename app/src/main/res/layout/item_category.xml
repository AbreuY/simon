<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
              android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:layout_width="match_parent" android:layout_height="@dimen/height_8dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <View android:layout_width="@dimen/width_8dp" android:layout_height="wrap_content"/>
        <LinearLayout android:orientation="vertical"
                      android:background="@color/white"
                      android:layout_width="@dimen/nol_dp" android:layout_height="@dimen/height_135dp"
                      android:layout_weight="1">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/height_94dp">
                <ImageView android:id="@+id/img_content" android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:scaleType="centerCrop"/>
                <LinearLayout android:gravity="right" android:orientation="vertical"
                              android:padding="@dimen/padding_6dp" android:layout_width="match_parent"
                              android:layout_height="match_parent">
                    <ImageView android:id="@+id/img_add_to_my_list" android:layout_width="@dimen/width_20dp"
                               android:layout_height="@dimen/height_20dp" />
                    <LinearLayout android:gravity="bottom" android:orientation="horizontal"
                                  android:layout_width="match_parent" android:layout_height="@dimen/nol_dp"
                                  android:layout_weight="1">
                        <!--<TextView android:textSize="@dimen/txt_size_10sp" android:textColor="@color/white"-->
                                  <!--android:id="@+id/txt_episode" android:layout_width="@dimen/nol_dp"-->
                                  <!--android:layout_height="wrap_content" android:text="@string/more"-->
                                  <!--android:layout_weight="1"/>-->
                        <TextView android:textSize="@dimen/txt_size_10sp" android:textColor="@color/dark_gray"
                                  android:gravity="right" android:id="@+id/txt_time"
                                  android:layout_width="@dimen/nol_dp" android:layout_height="wrap_content"
                                  android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout android:id="@+id/lyt_play_mini" android:layout_width="match_parent"
                             android:layout_height="match_parent">
                    <ImageView android:layout_gravity="center" android:layout_width="wrap_content"
                               android:layout_height="wrap_content" android:src="@mipmap/play_mini"/>
                </FrameLayout>
                <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                           android:src="@mipmap/gradasi_detail" android:scaleType="centerCrop"/>
            </RelativeLayout>
            <View android:id="@+id/line" android:background="@color/dark_gray" android:layout_width="match_parent"
                  android:layout_height="@dimen/height_2dp"/>
            <LinearLayout android:gravity="center" android:orientation="vertical"
                          android:background="@color/white"
                          android:paddingTop="@dimen/padding_top_8dp" android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/txt_size_12sp" android:textStyle="bold"
                          android:textColor="#000000" android:gravity="center" android:id="@+id/txt_title" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:text="@string/app_name"/>
            </LinearLayout>
        </LinearLayout>
        <View android:layout_width="@dimen/width_8dp" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>