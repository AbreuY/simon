<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.simontok.app">

    <application
            android:name=".SiMontok"
            android:allowBackup="true"
            android:label="@string/app_name"
            android:icon="@mipmap/ic_launcher"
            android:roundIcon="@mipmap/ic_launcher"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <meta-data
                android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
                android:value="net.simontok.app.ui.stream.content.CastOptionsProvider"
        />
        <activity android:name=".ui.splash.SplashActivity"
            android:theme="@style/Splash">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity"/>
        <activity android:name=".ui.setting.lock.LockActivity"/>
        <activity android:name=".ui.setting.SettingActivity"
            android:parentActivityName=".ui.main.MainActivity"/>
        <activity android:name=".ui.search.SearchActivity"/>
        <activity android:name=".ui.stream.live.LiveStreamActivity"/>
        <activity android:name=".ui.stream.content.ContentStreamActivity"/>
    </application>
</manifest>
